<div class="d-flex">
  <div class="flex-grow-1 auth-left-banner d-none d-sm-block">

  </div>
  <div class="auth-right-banner p-5">
    <%= image_tag "fake_airbnb.png", class: "logo featured mt-5" %>

    <div class="my-5">
      <h2>
        Escape life through travel
      </h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions mt-5 mb-4">
        <%= f.button :submit, "Login", class: "btn btn-primary btn-lg rounded-pill" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>