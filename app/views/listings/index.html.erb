<div class="container">
   <%= render "shared/navbar" %>
  <div class="row">
    <% @listings.each do | listing | %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <% if listing.photo.attached? %>
            <%= cl_image_tag listing.photo.key, height: 300, width: 350, crop: :fill %>
          <% else %>
            <%= image_tag "https://demo-source.imgix.net/house.jpg", height: 300, width: 350 %>
          <% end %>
          <div class="card-body">
           <h5 class="card-title d-flex justify-content-between align-items-center">
            <%= listing.name %> <!-- Listing Name -->
            <div class="rating-icon d-flex align-items-center">
              <i class="bi bi-star-fill fs-6"></i> <!-- Star icon from Bootstrap Icons -->
              <span class="rating-text ml-2">4.5</span> <!-- Rating text -->
            </div>
          </h5>


            <p class="card-text"><%= listing.description %></p>
             <a href="#" class="card-text"><%= listing.address %></a>
            <p class="card-text"><%= listing.price %><strong>SGD </strong> night</p>
            <p class="card-text"><%= listing.capacity%> <strong>pax</strong></p>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>

<div style="width: 100%; height: 600px; display:none"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
